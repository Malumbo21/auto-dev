CREATE TABLE FsNode (
  path TEXT NOT NULL PRIMARY KEY,
  isDir INTEGER NOT NULL,
  content BLOB,
  mtimeEpochMillis INTEGER NOT NULL
);

selectByPath:
SELECT path, isDir, content, mtimeEpochMillis
FROM FsNode
WHERE path = ?;

upsertNode:
INSERT OR REPLACE INTO FsNode(path, isDir, content, mtimeEpochMillis)
VALUES (?, ?, ?, ?);

deleteByPath:
DELETE FROM FsNode
WHERE path = ?;

selectChildren:
SELECT path, isDir, content, mtimeEpochMillis
FROM FsNode
WHERE path LIKE ?
ORDER BY path;
